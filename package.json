{
    "name": "AMEX-Articles",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "antd": "^3.10.3",
        "axios": "^0.21.1",
        "body-parser": "^1.19.0",
        "connected-react-router": "^4.4.1",
        "dotenv-flow": "^3.1.0",
        "http-proxy": "^1.17.0",
        "moment": "^2.24.0",
        "mongoose": "^5.6.11",
        "prop-types": "^15.7.2",
        "react": "^16.5.0",
        "react-dom": "^16.5.0",
        "react-hot-loader": "^4.3.6",
        "react-redux": "^5.0.6",
        "react-router": "^4.3.1",
        "react-router-dom": "^4.3.1",
        "react-router-redux": "^4.0.8",
        "react-scripts": "^1.1.5",
        "react-spinners": "^0.5.4",
        "react-syntax-highlighter": "^10.2.0",
        "react-typing-animation": "^1.6.2",
        "redux": "^3.7.2",
        "redux-injector": "^0.1.0",
        "redux-thunk": "^2.2.0"
    },
    "scripts": {
        "start": "concurrently \"npm run api\" \" react-app-rewired start\"",
        "api": "nodemon -r dotenv/config ./server/index.js",
        "build-prod": "NODE_ENV=production cp -a ./server ./prod_build && cp ./Procfile ./prod_build && react-app-rewired build && mv build prod_build/public",
        "test": "jest",
        "test:watch": "jest --watch",
        "eject": "react-scripts eject"
    },
    "devDependencies": {
        "axios-mock-adapter": "^1.15.0",
        "babel-jest": "^22.4.3",
        "babel-plugin-import": "^1.4.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2016": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "concurrently": "^4.0.1",
        "connect-timeout": "^1.9.0",
        "css-loader": "^0.28.11",
        "dotenv": "^8.1.0",
        "enzyme": "^3.6.0",
        "enzyme-adapter-react-16": "^1.5.0",
        "express": "^4.17.1",
        "jest": "20.0.4",
        "jest-cli": "^23.6.0",
        "less": "^2.7.3",
        "less-loader": "^4.0.5",
        "less-vars-to-js": "^1.2.0",
        "nodemon": "^1.18.4",
        "react-addons-test-utils": "^15.6.2",
        "react-app-rewire-less": "^2.1.3",
        "react-app-rewired": "^1.6.2",
        "redux-mock-store": "^1.5.3",
        "style-loader": "^0.18.2"
    },
    "jest": {
        "verbose": true,
        "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
        "unmockedModulePathPatterns": [
            "<rootDir>/node_modules/react",
            "<rootDir>/node_modules/react-dom",
            "<rootDir>/node_modules/react-addons-test-utils",
            "<rootDir>/node_modules/fbjs"
        ],
        "setupFiles": [
            "./src/test/__setup__/setup.js"
        ],
        "globals": {
            "NODE_ENV": "test jest"
        },
        "transformIgnorePatterns": [
            "/node_modules/",
            "/internals/"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "moduleNameMapper": {
            "\\.(css|less|sass|scss)$": "<rootDir>/src/test/__mocks__/styleMock.js",
            "\\.(gif|ttf|eot|svg)$": "<rootDir>/src/test/__mocks__/fileMock.js"
        }
    }
}
